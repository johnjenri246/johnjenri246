using System;

namespace Project_number_1_Code
{
	class Program
	{
		public static void Main(string[] args)
		{
			Console.WriteLine("Welcome i will show the summation of three numbers and the average of it");
			int num1, num2, num3, sum, average;
			
			Console.Write("Give me a first number: ");
			num1 = Convert.ToInt32(Console.ReadLine());
			Console.Write("Give me a second number: ");
			num2 = Convert.ToInt32(Console.ReadLine());
			Console.Write("Give me a third number: ");
			num3 = Convert.ToInt32(Console.ReadLine());
			sum = num1 + num2 + num3;
			average = sum / 3;
			Console.WriteLine("The summation of three numgbers is " + sum);
			Console.WriteLine("The average of three numbers is " + average);
			Console.WriteLine("Thankyou for using my program <3");
			Console.ReadKey();
		}
	}
}
